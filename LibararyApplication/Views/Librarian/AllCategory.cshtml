@model IList<LibararyApplication.Models.Category>
@{
    ViewData["Title"] = "AllCategory";
}

@if (TempData["success"] != null)
{
    <div class="alert alert-success alert-dismissible">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong></strong> @TempData["success"]
    </div>
}
@if (TempData["error"] != null)
{
    <div class="alert alert-danger alert-dismissible">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>خطا!</strong> @TempData["error"]
    </div>
}



<div class="row mb-5">
    <div class="col">
        <h6 class="font-weight-700  mb-0 text-uppercase mb-2"><mark>لیست دسته بندی ها</mark></h6>
        <hr class="divider divider-left divider-lg float-left">
    </div>
</div>

<div class="row">

    <div class="col-lg-3">
        <a class="btn btn-sm radius-6 shadow font-weight-500 text-success mb-3 " asp-controller="Librarian" asp-action="AddCategory" style="font-weight: bolder;"> افزودن دسته بندی</a>

    </div>
</div>


@if (Model.Count != 0)
{
    int counter = 1;



    <div class="row">

        <div class="col-lg-12 ">

            <table class="table table-dark table-hover radius-2 shadow-inner">
                <thead>
                    <tr class="text-center">
                        <th scope="col">#</th>
                        <th scope="col">کد دسته بندی</th>
                        <th scope="col">نام دسته بندی</th>
                        <th scope="col">زمان ایجاد</th>
                        
                    </tr>
                </thead>
                <tbody style="height:80%;">
                    @foreach (var item in Model)
                    {
                        <tr class="">

                            <td class="ml-4 mr-4">@counter</td>
                            <td class="ml-4 mr-4">@item.Id</td>
                            <td class="ml-4 mr-4">@item.Name</td>
                            <td class="ml-4 mr-4">@item.CreatedAt</td>

                        </tr>
                        counter++;

                    }
                </tbody>

            </table>

        </div>
    </div>
}
else
{
    <div class="d-flex justify-content-center">

        <h3 class="text-danger d-block m-5">
            !!متاسفانه دسته بندی ای یافت نشد
        </h3>
    </div>

}
