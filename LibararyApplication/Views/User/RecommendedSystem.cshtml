@model IList<LibararyApplication.Models.Book>
@{
    ViewData["Title"] = "RecommendedSystem";
}

@if (TempData["success"] != null)
{
        <div class="alert alert-success alert-dismissible">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong></strong> @TempData["success"]
        </div>
}
@if (TempData["error"] != null)
{
        <div class="alert alert-danger alert-dismissible">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>خطا!</strong> @TempData["error"]
        </div>
}

<div class="row mb-5">
    <div class="col">
        <h6 class="font-weight-700  mb-0 text-uppercase mb-2">کتاب های پیشنهادی توسط <mark>سیستم</mark></h6>
        <hr class="divider divider-left divider-lg float-left">
    </div>
</div>


@if (Model.Count != 0)
{

    <div class="row ">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 mb-5">
                <div class="item web">
                    <a class="radius-1 shadow-inner  hover-effect d-block" data-overlay="rgba(52,58,64,.6)" asp-controller="User" asp-action="ShowBook" asp-route-bookId="@item.Id">
                        <span class="hover-effect-container">
                            <span class="hover-effect-icon ">
                                <span class=" fas fa-eye top-icon "></span>
                            </span>
                        </span>
                        <div class="  p-2  ">
                            <div class="shadow radius-1">
                                <img class=" radius-1" alt="" src="~/images/@(item.Id + ".jpg")">
                            </div>
                            <div class="text-center mt-2">
                                @item.Name
                            </div>
                        </div>
                    </a>
                    <div class="text-center  inner radius-1 mt-3">
                        <a asp-controller="User" asp-action="Reserving" asp-route-bookId="@item.Id" class="text-success text-bold">
                            رزو کتاب
                            <i class="material-icons">exposure_plus_1</i>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="d-flex justify-content-center">

        <h3 class="text-danger d-block m-5">
            !!متاسفانه هنوز داده های مورد نیاز برای پیشنهاد کتاب در دسترس سامانه نیست
        </h3>
    </div>

}
